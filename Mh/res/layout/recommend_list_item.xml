<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/list_btn_on"
    android:paddingLeft="10dip"
    android:paddingRight="10dip"
    android:paddingTop="10dip"
    android:paddingBottom="10dip" >
    
    <ImageView 
        android:id="@+id/recommend_list_item_iv"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:src="@drawable/img02"
        android:scaleType="fitXY"
        android:layout_marginRight="5dip"
        />
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView 
            android:id="@+id/recommend_list_item_title_tv"
            android:layout_width="wrap_content"
           	android:layout_height="wrap_content"
           	android:singleLine="true"
           	android:text="标题"
           	android:textColor="#000000"
           	android:textSize="18dip"
           	android:layout_marginBottom="2dp"
           	android:layout_marginLeft="6dp"
            />
        
        
        <TextView 
            android:id="@+id/recommend_list_item_profile_tv"
            android:layout_width="wrap_content"
           	android:layout_height="wrap_content"
           	android:text="内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容"
           	android:textColor="#555555"
           	android:textSize="14dip"
           	android:layout_marginBottom="2dp"
           	android:layout_marginLeft="6dp"
           	android:lines="2"
           	android:ellipsize="end"
            />
        
        
    </LinearLayout>
    
    

</LinearLayout>
