            <!-- 
               <WebView
                android:id="@+id/do_work_web_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
 			-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:text="附件下载"
                android:textColor="#51b6ae" />

            <ListView
                android:id="@+id/do_work_show_page_attach_lv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:cacheColorHint="@null"
                android:divider="#E8E8E7"
                android:dividerHeight="1dip" />

            <Button
                android:id="@+id/do_work_show_page_bottom_but"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dip"
                android:layout_marginTop="5dip"
                android:background="@drawable/do_work_redbtn"
                android:padding="5dip"
                android:text="我要办理"
                android:textColor="#ffffff"
                android:textSize="14sp" />

         
        </LinearLayout>
    </ScrollView>

</LinearLayout>