<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#78b651" >

        <ImageButton
            android:id="@+id/do_work_show_page_back_ib"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="5dip"
            android:background="@drawable/home_tab_arrow"
            android:src="@drawable/icon_back_ontouch" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="办事"
            android:textColor="#ffffff"
            android:textSize="20dp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/do_work_show_page_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="5dip"
                android:text="办理条件"
                android:textColor="#000000"
                android:textSize="15dp" />

            <Button
                android:id="@+id/do_work_show_page_title_but"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dip"
                android:layout_marginTop="5dip"
                android:background="@drawable/do_work_redbtn"
                android:padding="5dip"
                android:text="我要办理"
                android:textColor="#ffffff"
                android:textSize="14sp" />

             <WebView
                android:id="@+id/do_work_web_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
             
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:text="办理条件"
                android:textColor="#51b6ae" />

            <TextView
                android:id="@+id/do_work_show_page_tiaojian_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:text="办理条件办理条件办理条件办理条件办理条件办理条件办理条件办理条件办理条件办理条件办理条件办理条件办理条件办理条件办理条件办理条件办理条件办理条件"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:text="办理程序"
                android:textColor="#51b6ae" />

            <TextView
                android:id="@+id/do_work_show_page_chengxu_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:text="办理程序办理程序办理程序办理程序办理程序办理程序办理程序办理程序办理程序办理程序办理程序办理程序办理程序办理程序办理程序办理程序办理程序办理程序办理程序办理程序"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:text="承诺时限"
                android:textColor="#51b6ae" />

            <TextView
                android:id="@+id/do_work_show_page_shixian_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:text="承诺时限承诺时限承诺时限承诺时限承诺时限承诺时限承诺时限承诺时限承诺时限承诺时限承诺时限承诺时限承诺时限承诺时限承诺时限承诺时限承诺时限承诺时限承诺时限承诺时限承诺时限承诺时限"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:text="收费标准及依据"
                android:textColor="#51b6ae" />

            <TextView
                android:id="@+id/do_work_show_page_shoufei_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:text="收费标准及依据收费标准及依据收费标准及依据收费标准及依据收费标准及依据收费标准及依据收费标准及依据收费标准及依据收费标准及依据收费标准及依据收费标准及依据收费标准及依据收费标准及依据收费标准及依据"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:text="全部申办材料及目录"
                android:textColor="#51b6ae" />

            <TextView
                android:id="@+id/do_work_show_page_cailiao_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:text="全部申办材料及目录全部申办材料及目录全部申办材料及目录全部申办材料及目录全部申办材料及目录全部申办材料及目录全部申办材料及目录全部申办材料及目录全部申办材料及目录全部申办材料及目录"
